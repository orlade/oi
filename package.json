  "license": "MIT",
  "bin": {
    "oi": "dist/oi.js"
  },
  "main": "dist/lib.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "mkdir -p dist && rollup -c && rollup -c && echo 'Build complete'",

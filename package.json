    "moment": "2.11.1",
    "require-dir": "^0.3.0",
    "shelljs": "^0.5.3",
    "touch": "^1.0.0",
    "universal-mixin": "^1.0.0",
    "winston": "^2.1.1",
    "yargs": "^3.32.0"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.1.1",
    "chai": "^3.5.0",
    "rollup": "^0.25.2",
    "rollup-plugin-babel": "^2.3.9",
    "watch": "latest"
  }
